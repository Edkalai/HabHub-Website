{% extends 'base.html.twig' %}

{% block title %}Business{% endblock %}

{% block business %}
    <li class="active">
        <a href="{{ path('app_business_index_back_office') }}">
            <i class="fa fa-briefcase" aria-hidden="true"></i>
            <p>Business Partners</p>
        </a>
    </li>
{% endblock %}
{% block body %}
<div class="ahbet">
<div class="container">
    <h1>Business Details</h1>
    <div class="row">

    <table class="table">
        <tbody>
            <tr>
                <th>Idbusiness</th>
                <td>{{ business.idbusiness }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ business.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ business.description }}</td>
            </tr>
            <tr>
                <th>Horaire</th>
                <td>{{ business.horaire }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ business.ville }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ business.localisation }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ business.type }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ business.experience }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_business_index_back_office') }}">back to list</a>

    <a href="{{ path('app_business_edit', {'idbusiness': business.idbusiness}) }}">edit</a>
        {{ render(path('app_business_services_index', {'idbusiness': business.idbusiness} )) }}
        {{ render(path('app_revue_index', {'idbusiness': business.idbusiness} )) }}
