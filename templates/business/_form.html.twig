<script>
    function initMap() {
        latEl = document.querySelector( '#business_lat' );
        longEl = document.querySelector( '#business_lng' );
        const myLatLng = { lat: 36.80007843469928 , lng: 10.183331478806037};
        const map = new google.maps.Map(document.getElementById("newMap"), {
            zoom: 15,
            center: myLatLng,
        });

        var vMarker =new google.maps.Marker({
            position: myLatLng,
            map,
            title: "Hello World!",
            draggable:true,
        });

        google.maps.event.addListener(vMarker, 'dragend', function (evt) {
            lat = vMarker.getPosition().lat();
            long = vMarker.getPosition().lng();
            latEl.value = lat;
            longEl.value = long;


            console.log(lat);
            console.log(long);


        });

    }

    window.initMap = initMap;

</script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
