

{% block body %}
    <section id="testimonials">
        <div class="testimonial-heading">
            <span>Comments</span>
        </div>

        <div class="testimonial-box-container">
            {% for revue in revues %}
            <div class="testimonial-box">
                <div class="box-top">
                    <div class="profile">
                        <div class="profile-img">
                            <img src="{{ asset('FrontOffice/assets/images/profile-icon-anonymous.jpg') }}">
                        </div>
                        <div class="name-user">
                            <strong>{{ revue.idindividu.prenom }} {{ revue.idindividu.nom }}</strong>
                            <span>Posted on {{ revue.datepublication ? revue.datepublication|date('Y-m-d') : '' }}</span>
                        </div>
                    </div>
                    <div class="reviews ">
                        {% if revue.nbetoiles==0 %}
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        {% elseif revue.nbetoiles==1 %}
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                        {% elseif revue.nbetoiles==2 %}
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                        {% elseif revue.nbetoiles==3 %}
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                        {% elseif revue.nbetoiles==4 %}
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                        {% elseif revue.nbetoiles==5 %}
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        {% endif %}
                    </div>
                </div>
                <div class="client-comment">
                    <p>{{ revue.commentaire }}</p>
                </div>
            </div>
            {% endfor %}
        </div>

    </section>
{% endblock %}
