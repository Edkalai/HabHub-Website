                            <a href="#"><h4>{{ annonceAdoption.localisation}}</h4></a>
                            <p>{{ annonceAdoption.idchien.description }}</p>
                            <div class="border-first-button"><a href="{{ path('app_annonce_adoption_show',{'idannonceadoption': annonceAdoption.idannonceadoption}) }}">More details</a></div>
                        </div>
                    </div>
                </div>




                {% endfor %}