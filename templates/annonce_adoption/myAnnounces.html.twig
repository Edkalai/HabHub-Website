{% extends 'base.html.twig' %}


{% set queryParams = app.request.query.all %}

{% block title %}Adoption index{% endblock %}



{% block body %}
    
    <div id="blog" class="blog">
        <div class="container">
        
            <div class="row" id="content">

            
        <div class="ahbet" style="padding-top:7px;">
            <a  href="{{ path('app_annonce_adoption_new') }}"><img style="max-width: 300px;max-height: 100px;"src="{{asset('FrontOffice/assets/images/AddRequestButton.png') }}"></a>
            </div>
            

                {% for annonceAdoption in annonceAdoptions %}
                <div class="col-lg-3 show-up wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.3s">
                    
                    <div class="blog-post">
                        <div class="thumb">
                            <a href="#"><img src="{{ asset('FrontOffice/uploads/'~annonceAdoption.idchien.image) }}" alt="nope"></a>
                        </div>
                        <div class="down-content">
                            <span class="category">{{annonceAdoption.idchien.nom}}</span>
                            <span class="date">{{annonceAdoption.datepublication|date("m/d/Y")}}</span>
                            <a href="#"><h4>{{ annonceAdoption.localisation}}</h4></a>
                            <p>{{ annonceAdoption.idchien.description }}</p>
                            <div class="border-first-button">
                           <a href="{{ path('app_annonce_adoption_edit', {'idannonceadoption': annonceAdoption.idannonceadoption}) }}">edit</a>
                           </div>
                           <div>
                           <a href="{{ path('app_annonce_adoption_delete', {'idannonceadoption': annonceAdoption.idannonceadoption}) }}"> <img class="ahbet" style="max-height: 70px; max-width:54px;" src="{{asset('FrontOffice/assets/images/chien/deleteDog.png') }}"> </a>
                           </div>
                            
                        </div>
                    </div>
                </div>

                {% endfor %}

            </div>
            
                    </div>
                    </div>
                
        
{% endblock %}

