<div class="row">
    <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add Dog</h5>

                <!-- General Form Elements -->
                {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}

                <div class="col-sm-10">
                    {{ form_row(f.description,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.description,{'attr':{'class':'text-danger'}}) }}

                <div class="col-sm-10">
                    {{ form_row(f.localisation,{'attr':{'class':'form-control'}}) }}

                </div>
                {{ form_errors(f.localisation,{'attr':{'class':'text-danger'}}) }}

                 <label for="inputText" class="col-sm-4 col-form-label">Owner</label>
                <div class="col-sm-10">
                    {{ form_widget(f.idindividu,{'attr':{'class':'form-control'}}) }}

                </div>
                 <label for="inputText" class="col-sm-4 col-form-label">Dog</label>
                <div class="col-sm-10">
                    {{ form_widget(f.idchien,{'attr':{'class':'form-control'}}) }}

                </div>
                <br/>
                <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                    {{ form_widget(f.add,{'attr':{'class':'btn btn-primary'}}) }}
                </div>
                

                {{ form_end(f) }}

            </div>
        </div>

    </div>

</div>

