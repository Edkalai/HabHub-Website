{% extends 'baseBack.html.twig' %}

{% block title %}Adoption index{% endblock %}
{% block adoption %}
    <li class="active">
        <a href="{{ path('app_annonce_adoption_index_back_office') }}">
            <i class="fa fa-paw" aria-hidden="true"></i>
            <p>Adoption posts</p>
        </a>
    </li>
{% endblock %}

{% block body %}

<nav
        class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent"
>
    <div class="container-fluid">
        <div class="navbar-wrapper">
            <div class="navbar-toggle">
                <button type="button" class="navbar-toggler">
                    <span class="navbar-toggler-bar bar1"></span>
                    <span class="navbar-toggler-bar bar2"></span>
                    <span class="navbar-toggler-bar bar3"></span>
                </button>
            </div>
            <a class="navbar-brand" href="javascript:;">Adoption </a>
        </div>
        <button
                class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navigation"
                aria-controls="navigation-index"
                aria-expanded="false"
                aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
        </button>
        <div
                class="collapse navbar-collapse justify-content-end"
                id="navigation"
        >
            <form>
                <div class="input-group no-border">
                    <input
                            type="text"
                            value=""
                            class="form-control"
                            placeholder="Search..."
                    />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="nc-icon nc-zoom-split"></i>
                        </div>
                    </div>
                </div>
            </form>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link btn-magnify" href="javascript:;">
                        <i class="nc-icon nc-layout-11"></i>
                        <p>
                            <span class="d-lg-none d-md-block">Stats</span>
                        </p>
                    </a>
                </li>
                <li class="nav-item btn-rotate dropdown">
                    <a
                            class="nav-link dropdown-toggle"
                            href="http://example.com"
                            id="navbarDropdownMenuLink"
                            data-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false"
                    >
                        <i class="nc-icon nc-bell-55"></i>
                        <p>
                            <span class="d-lg-none d-md-block">Some Actions</span>
                        </p>
                    </a>
                    <div
                            class="dropdown-menu dropdown-menu-right"
                            aria-labelledby="navbarDropdownMenuLink"
                    >
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn-rotate" href="javascript:;">
                        <i class="nc-icon nc-settings-gear-65"></i>
                        <p>
                            <span class="d-lg-none d-md-block">Account</span>
                        </p>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!-- End Navbar -->
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Simple Table</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="text-primary">
                            <th>Owner Name</th>
                            <th>Name</th>
                            <th>Sexe</th>
                            <th>Age</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Color</th>
                            <th>Race</th>
                            <th>groupe</th>
                            <th>Vaccination</th>
                            <th>Actions</th>
                            </thead>
                            <tbody>
                            {% for annonceAdoption in annonceAdoptions %}
                            <tr>
                                <td>{{ annonceAdoption.idindividu.nom ~' '~ annonceAdoption.idindividu.prenom }}</td>
                                <td>{{ annonceAdoption.idchien.nom }}</td>
                                <td>{{ annonceAdoption.idchien.sexe }}</td>
                                <td>{{ annonceAdoption.idchien.age }}</td>
                                <td >{{ annonceAdoption.idchien.description }}</td>
                                <td >{{  annonceAdoption.idchien.image }}</td>
                                <td >{{ annonceAdoption.idchien.color}}</td>
                                <td >{{annonceAdoption.idchien.race}}</td>
                                <td >{{ annonceAdoption.idchien.groupe}}</td>
                                <td >{{ annonceAdoption.idchien.vaccination ? 'Yes' : 'No' }}</td>
                                <td>
                                    {{ include('annonce_adoption/_delete_form.html.twig') }}
                                    <a href="{{ path('app_annonce_adoption_edit', {'idannonceadoption': annonceAdoption.idannonceadoption}) }}">edit</a>
                                    <a href="{{ path('app_annonce_adoption_new') }}">Create post</a>
                                </td>

                                <td class="text-right"></td>
                            </tr>

                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

        
{% endblock %}
