{% extends 'base.html.twig' %}

{% block title %}Mating Partner{% endblock %}
{% block body %}

            <div class="ahbet">
                <div class="container">

                    <div class="flex-box">
                        <div class="left">
                            <div class="big-img">

                                <a href="#"><img src="{{asset('FrontOffice/uploads/'~annonce_proprietaire_chien.idchien.image) }}" alt=""></a>
                            </div>
                        </div>
                        <div class="right">
                           <div class="title-ville">
                                <div>
                                    <h3 class="business-title">{{ annonce_proprietaire_chien.idchien.nom }}</h3>
                                    <div class="space-2"></div>

                                    <div class="tag-box">
                                        <div class="tag-sexe">
                                            {% if annonce_proprietaire_chien.idchien.sexe=='M' %}
                                                <img src="{{ asset('FrontOffice/assets/images/chien/male.png') }}" alt="">
                                            {% else %}
                                                <img src="{{ asset('FrontOffice/assets/images/chien/female.png') }}" alt="">
                                            {% endif %}
                                         </div>

                                    </div>
                                </div>

                                <div>
                                    <h4 >{{ annonce_proprietaire_chien.idchien.idindividu.nom ~' '~ annonce_proprietaire_chien.idchien.idindividu.prenom }}</h4>
                                    <div class="space-2"></div>
                                </div>



                            </div>

                            <div class="element">
                                <div class="space-5"></div>
                                <label class="key">Description</label>
                                <br/>
                                <span class="value">{{annonce_proprietaire_chien.idchien.description }}</span>

                            </div>
                            <div class="element">
                                <div class="space-2"></div>
                                <label class="key-bigger">Age: </label>
                                <span class="value-bigger">{{annonce_proprietaire_chien.idchien.age }}</span>
                            </div>
                            <div class="element">
                                <div class="space-2"></div>
                                <label class="key-bigger">Address: </label>
                                <span class="value-bigger"> {{ annonce_proprietaire_chien.idchien.idindividu.adresse }}</span>
                            </div>
                            <div class="space-2"></div>


                            <div class="element">
                                <div class="space-2"></div>
                                <label class="key-bigger"> Date de publication: </label>
                                <span class="value-bigger">{{ annonce_proprietaire_chien.datepublication ? annonce_proprietaire_chien.datepublication |date('Y-m-d') : '' }}</span>
                            </div>

                                <div class="element">
                                    <div class="space-2"></div>
                                    <label class="key-bigger"> Vaccinated : </label>
                                    <span class="value-bigger">{{ annonce_proprietaire_chien.idchien.vaccination ? 'Yes' : 'No' }}</span>
                                </div>
                        </div>

                    </div>


{% endblock %}