{% extends 'base.html.twig' %}

{% block title %}Lost Dog{% endblock %}

{% block body %}

    <div class="ahbet">
        <div class="container">

            <div class="flex-box">
                <div class="left">
                    <div class="big-img">

                        <a href="#"><img src="{{asset('FrontOffice/uploads/'~annonce_proprietaire_chien.idchien.image) }}" alt=""></a>
                    </div>
                </div>
                <div class="right">
                    <div class="title-ville">
                        <div>
                            <h3 class="business-title">{{ annonce_proprietaire_chien.idchien.nom }}</h3>
                            <div class="space-2"></div>

                            <div class="tag-box">
                                <div class="tag-sexe">
                                    {% if annonce_proprietaire_chien.idchien.sexe=='M' %}
                                        <img src="{{ asset('FrontOffice/assets/images/chien/male.png') }}" alt="">
                                    {% else %}
                                        <img src="{{ asset('FrontOffice/assets/images/chien/female.png') }}" alt="">
                                    {% endif %}
                                </div>

                            </div>
                        </div>



                    </div>

                    <div class="element">
                        <div class="space-5"></div>
                        <label class="key">Description</label>
                        <br/>
                        <span class="value">{{annonce_proprietaire_chien.idchien.description }}</span>

                    </div>
                    <div class="element">
                        <div class="space-2"></div>
                        <label class="key-bigger">Age: </label>
                        <span class="value-bigger">{{annonce_proprietaire_chien.idchien.age }}</span>
                    </div>
                    <div class="element">
                        <div class="space-2"></div>
                        <label class="key-bigger">Lost in: </label>
                        <span class="value-bigger"> {{ annonce_proprietaire_chien.idchien.idindividu.adresse }}</span>
                    </div>
                    <div class="space-2"></div>


                    <div class="element">
                        <div class="space-2"></div>
                        <label class="key-bigger"> Lost on: </label>
                        <span class="value-bigger">{{ annonce_proprietaire_chien.datepublication ? annonce_proprietaire_chien.dateperte |date('Y-m-d') : '' }}</span>
                    </div>
                </div>
            </div>




    <div  style="z-index: 1">

        <label for="">Address: <input id="map-search" class="controls" type="text" placeholder="Search Box" size="104"></label><br>
        <div id="notifyowner"></div>
        {{ form_start(form) }}
        {{ form_widget(form.Notify,{'attr':{'class':'btn btn-primary','text':'Notify Owner'}}) }}

        <div style="display:none">
            {{ form_end(form) }}

            <label for="">Lat: <div id="idchien">{annonce_proprietaire_chien.idchien.idchien}</div></label>

            <label for="">Lat: <input type="text" class="latitude"></label>
        <label for="">Long: <input type="text" class="longitude"></label>
        <label for="">City <input type="text" class="reg-input-city" placeholder="City"></label>
        </div>
        <div id="map-canvas"></div>
    </div>
    <script src="{{ asset('FrontOffice/assets/js/mapLostDogs.js') }}"></script>
    </div>
</div>
    </div>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAG1HwsLk_Q_l3KL6Ki1z83gXvppk_xVpY&libraries=places&callback=initialize"></script>
    <script>
        if ( window.history.replaceState ) {
            window.history.replaceState( null, null, window.location.href );
        }
    </script>
{% endblock %}