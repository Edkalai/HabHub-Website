{% extends 'base.html.twig' %}

{% block title %}Dog{% endblock %}
{% block hub %}
    <li class="scroll-to-section"><a href="#" class="active">Hub</a>
        <div class="sub-menu-1">
            <ul>


                <li> <a href="{{ path('app_chien_index_my_dogs') }}">My Dogs</a></li>

                <li> <a href="{{ path('app_chien_index_dogs-next-door') }}">Dogs Next Door</a></li>

                <li> <a href="{{ path('app_annonce_proprietaire_chien_index_lost') }}">Lost Dogs</a></li>
                <li> <a href="{{ path('app_annonce_proprietaire_chien_index_mating') }}">Mating</a></li>
                <li></li>
            </ul>
        </div>
    </li>
{% endblock %}
{% block body %}
<div class="ahbet">
    <div class="container">

        <div class="flex-box">
            <div class="left">
                <div class="big-img">

                    <a href="#"><img src="{{asset('FrontOffice/uploads/'~chien.image) }}" alt=""></a>
                </div>
            </div>
            <div class="right">
                <div class="title-ville">
                    <div>
                    <h3 class="business-title">{{ chien.nom }}</h3>
                        <div class="space-2"></div>

                        <div class="tag-box">
                        <div class="tag-sexe">
                            {% if chien.sexe=='M' %}
                                <img src="{{ asset('FrontOffice/assets/images/chien/male.png') }}" alt="">
                            {% else %}
                                <img src="{{ asset('FrontOffice/assets/images/chien/female.png') }}" alt="">
                            {% endif %}
                        </div>

                        </div>
                    </div>
                    {% if liked %}
                        <a href="{{ path('app_likes_removelike_show', {'idchien': chien.idchien,'liked':liked}) }}"> <img class="chien-icon" src="{{asset('FrontOffice/assets/images/chien/heartIcon.png') }}"> </a>
                    {% else %}
                        <a href="{{ path('app_likes_addlike_show', {'idchien': chien.idchien,'liked':liked}) }}"> <img class="chien-icon" src="{{asset('FrontOffice/assets/images/chien/emptyHeartIcon.png') }}"> </a>
                    {% endif %}


                </div>
                {% if chien.playwithme %}

                    <img style="margin-top:2%;max-height: 27px;max-width: 102px;" src="{{asset('FrontOffice/assets/images/chien/playWithMe.png') }}">
                {% endif %}

                <div class="element">
                    <div class="space-5"></div>
                    <label class="key">Description</label>
                    <br/>
                    <span class="value">{{chien.description }}</span>

                </div>
                <div class="element">
                    <div class="space-2"></div>
                    <label class="key-bigger">Age: </label>
                    <span class="value-bigger">{{chien.age }}</span>
                </div>
                <div class="element">
                    <div class="space-2"></div>
                    <label class="key-bigger">Address: </label>
                    <span class="value-bigger"> {{ chien.idindividu.adresse }}</span>
                </div>
                <div class="space-5"></div>


                <div class="element">
                    <div class="space-2"></div>
                    <label class="key-bigger"> </label>
                    <span class="value-bigger"></span>
                </div>
            </div>
        </div>





        {% endblock %}
