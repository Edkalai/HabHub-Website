<div class="row">
    <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Dog</h5>

                <!-- General Form Elements -->
                {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-10">
                    {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}

                </div>
                {{ form_errors(f.nom,{'attr':{'class':'text-danger'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">Age</label>
                <div class="col-sm-10">
                    {{ form_widget(f.age,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.age,{'attr':{'class':'text-danger'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">Gender</label>
                <div class="col-sm-10">
                    {{ form_widget(f.sexe,{'attr':{'class':'form-control'}}) }}

                </div>
                {{ form_errors(f.sexe,{'attr':{'class':'text-danger'}}) }}

                

                <label for="inputText" class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-10">
                    {{ form_widget(f.description,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.description,{'attr':{'class':'text-danger'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-10">
                    {{ form_widget(f.image,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.image,{'attr':{'class':'text-danger'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">Color</label>
                <div class="col-sm-10">
                    {{ form_widget(f.color,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.color,{'attr':{'class':'text-danger'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">Race</label>
                <div class="col-sm-10">
                    {{ form_widget(f.race,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.race,{'attr':{'class':'text-danger'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">Group</label>
                <div class="col-sm-10">
                    {{ form_widget(f.groupe,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.groupe,{'attr':{'class':'text-danger'}}) }}

                <br/>
                <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                    {{ form_widget(f.add,{'attr':{'class':'btn btn-primary'}}) }}
                </div>

                {{ form_end(f) }}

            </div>
        </div>

    </div>

</div>

